<div class="row">
  <aside class="col-xs-4">
    <p class="trim-image-to-circle-default">
      <%= profile_image(@user) %>
    </p>
    <div>
      <h1><%= @user.name %></h1>
    </div>
    <%= render 'relationships/follow_button', user: @user %>
  </aside>
  <div class="col-xs-8">
    <ul class="nav nav-tabs nav-justified">
      <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>ログ <span class="badge"><%= @count_logs %></span><% end %></li>
      <li class="<%= 'active' if current_page?(followings_user_path(@user)) %>"><%= link_to followings_user_path(@user) do %>友達 <span class="badge"><%= @count_followings %></span><% end %></li>
      <li class="<%= 'active' if current_page?(followers_user_path(@user)) %>"><%= link_to followers_user_path(@user) do %>友達かも <span class="badge"><%= @count_followers %></span><% end %></li>
    </ul>
    <%= render 'logs/logs', logs: @logs %> <!-- @logsはコントローラから　-->
  </div>
</div>